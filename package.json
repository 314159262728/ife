{
  "name": "ife",
  "version": "1.0.0",
  "description": "Baidu ife",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "gulp clean --gulpfile config/gulpfile.js --cwd ./",
    "gulp": "gulp pug --gulpfile config/gulpfile.js --cwd ./",
    "gulp:w": "gulp watch --gulpfile config/gulpfile.js --cwd ./",
    "webpack": "webpack --config config/webpack.prod.js",
    "webpack:dev": "webpack --config config/webpack.dev.js",
    "webpack:w": "webpack-dev-server --config config/webpack.dev.js",
    "dev": "npm run clean && npm run webpack:dev && concurrently -r -k \"npm run webpack:w\" \"npm run gulp:w\" ",
    "prod": "npm run clean && npm run webpack && npm run gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ding-js/ife.git"
  },
  "author": "ding-js",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ding-js/ife/issues"
  },
  "homepage": "https://github.com/ding-js/ife#readme",
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "concurrently": "^3.3.0",
    "css-loader": "^0.26.1",
    "cssnano": "^3.10.0",
    "del": "^2.2.2",
    "get-entries": "^2.0.1",
    "gulp": "^3.9.1",
    "gulp-data": "^1.2.1",
    "gulp-plumber": "^1.1.0",
    "gulp-pug": "^3.2.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.2",
    "pug": "^2.0.0-beta11",
    "pug-loader": "^2.3.0",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.1",
    "ts-loader": "^2.0.1",
    "tslint": "^4.4.2",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "@types/bootstrap": "^3.3.32",
    "@types/jquery": "^2.0.40",
    "bootstrap": "^4.0.0-alpha.6",
    "jquery": "^3.1.1"
  }
}
